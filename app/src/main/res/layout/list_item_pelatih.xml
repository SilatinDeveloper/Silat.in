<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pelatih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_nama_pelatih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nikko Eka Saputra"
                    android:layout_toRightOf="@id/image"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_alamat_pelatih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@+id/tv_nama_pelatih"
                    android:text="Jalan Kelurahan Cipadung No. 1, RT. 03/08, Cipadung, Cibiru, Kota Bandung"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_no_telp_pelatih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@+id/tv_alamat_pelatih"
                    android:text="Telp. 08988190546"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c9c9c9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_aliran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="IKS PI Kera Sakti"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_call"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"
                    android:text="CALL"
                    android:textColor="@color/colorAccent"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>