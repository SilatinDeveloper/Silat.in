<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_sanggar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_nama_sanggar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sanggar Silat Tadjimalela"
                    android:layout_toRightOf="@id/image"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_alamat_sanggar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@+id/tv_nama_sanggar"
                    android:text="Jalan A.H Nasution No. 1, Cipadung, Cibiru, Kota Bandung"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_no_telp_sanggar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@+id/tv_alamat_sanggar"
                    android:text="Telp. 08988190546"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c9c9c9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_jarak_sanggar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="+ 0.5 KM"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_direct_maps"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"
                    android:text="MAPS"
                    android:textColor="@color/colorAccent"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>